@model IEnumerable<Rento.Entity.Message>

@{
    ViewBag.Title = Resources.Resource.Messages;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resource.Messages</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Resources.Resource.Number
            </th>
            <th>
                @Resources.Resource.Body
            </th>
            <th>
                @Resources.Resource.CreateDate
            </th>
        </tr>
    </thead>
    @{
        if (Model == null|| Model.Count() ==0 )
        {
            <tr>
                <td class="text-center" colspan="3">@Resources.Resource.EmptyTable</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Body)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                </tr>
            }
        }
    }

</table>

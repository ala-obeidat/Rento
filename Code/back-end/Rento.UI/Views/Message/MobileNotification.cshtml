@using Resources;
@{
    ViewBag.Title = Resources.Resource.MobileNotification;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Resource.MobileNotification</h2>
<hr />
@using (Html.BeginForm("MobileNotificationPost", "Message", FormMethod.Post, new { id = "mainForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div id="mainDiv" class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">@Resources.Resource.Subject :</label>
            <div class="col-md-4">
                <input name="Title" class="form-control required" placeholder="@Resources.Resource.Subject" />
            </div>
            <label class="control-label col-md-2">@Resources.Resource.Type :</label>
            <div class="col-md-4">
                <select name="Type" class="form-control">
                    <option value="0">@Resources.Resource.All</option>
                    <option value="1">@Resources.Resource.Android</option>
                    <option value="2">@Resources.Resource.iPhone</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">@Resources.Resource.Text :</label>
            <div class="col-md-10">
                <textarea id="Body" name="Body" class="form-control required" cols="20" rows="2"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.Resource.Send" class="btn btn-success" />
            </div>
        </div>
    </div>
}
@section scripts{
    <script>
        _orderPage = true;
        $('#mainForm').submit(function () {
            sendPostRequest(null,null,clearBtn);
            return false;
        });
        function clearBtn() {
            $(':input').not(':button, :submit').val('');
            $('#Body').val('');
        }
    </script>
}